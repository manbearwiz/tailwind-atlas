{
  "name": "tailwind-atlas",
  "version": "0.0.0-development",
  "description": "Scan a directory and parse tailwind classes",
  "types": "dist/types/index.d.ts",
  "files": ["dist", "tailwind-atlas.mjs"],
  "keywords": ["tailwind", "css", "purge", "scan"],
  "scripts": {
    "build": "npx concurrently npm:build:*",
    "build:vite": "vite build",
    "build:tsc": "tsc -b tsconfig.types.json",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest --watch --coverage --ui",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release",
    "lint": "npx @biomejs/biome check",
    "lint:fix": "npx @biomejs/biome check --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manbearwiz/tailwind-atlas.git"
  },
  "author": "Kevin Brey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manbearwiz/tailwind-atlas/issues"
  },
  "homepage": "https://github.com/manbearwiz/tailwind-atlas#readme",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-angular": "^19.3.0",
    "@tsconfig/recommended": "^1.0.3",
    "@tsconfig/strictest": "^2.0.2",
    "@tsconfig/vite-react": "^3.0.2",
    "@types/node": "^20.12.12",
    "@vitest/coverage-v8": "^2.0.3",
    "@vitest/ui": "^2.0.3",
    "happy-dom": "^14.12.3",
    "semantic-release": "^22.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vitest": "^2.0.4"
  },
  "dependencies": {
    "@tailwindcss/oxide": "^4.0.0-0",
    "tailwindcss": "^4.0.0-0"
  },
  "release": {
    "branches": ["main"]
  },
  "type": "module",
  "main": "./dist/tailwind-atlas.umd.cjs",
  "module": "./dist/tailwind-atlas.js",
  "exports": {
    ".": {
      "import": "./dist/tailwind-atlas.js",
      "require": "./dist/tailwind-atlas.umd.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "bin": "./tailwind-atlas.mjs"
}
